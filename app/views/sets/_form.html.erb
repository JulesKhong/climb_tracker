<%= render "layouts/errors", :object => @set %>

<%= form_for [@profile, @set] do |f|%>
  <%= f.label :date %>
  <%= f.date_field :date, :class => "form-control" %>
  <%= f.label :time %>
  <%= f.time_field :time, :class => "form-control" %>

  <%= f.radio_button :type, "Bouldering" %>
  <%= f.label :type, "Bouldering" %>
  <%= f.radio_button :type, "Top-Rope Climbing" %>
  <%= f.label :type, "Top-Rope Climbing" %>

  <%= f.label :location %>
  <%= f.text_field :location, :class => "form-control" %>
  <%= f.hidden_field :profile_id, :value => @profile.id %>
  <%= f.submit :class => "btn btn-success" %>
<% end %>
